fu! RelativePathString()
    let file = expand("%")

    if strlen(file) == 0
        retu "[No Name]"
    en

    retu file
endf

" From https://github.com/neovim/neovim/issues/1468#issuecomment-62979169
function! Manpage()
  let word = expand('<cword>')
  enew!
  setl nomod nolist nonumber norelativenumber
  nnoremap q :bd!<cr>
  setf man
  exe 'r !man '.word
  normal gg
endfunction
nnoremap K :call Manpage()<cr>

